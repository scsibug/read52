<script>
function message(obj){
  var el = $("<p />").hide().text(obj);
  $('#actions').prepend(el);
  el.fadeIn();
  var actions = $('#actions p').length;
  if (actions > 10) {
    $('#actions p:last').remove();
  }
 }

var socket = new io.Socket(null, {port: 8124, rememberTransport: false});
socket.connect();
socket.on('message', function(obj){
    message(obj);
  });
</script>

<h1>Recent Actions</h1>
<div id="actions"></div>
